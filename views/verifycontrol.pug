extends layout

include menu-partial 

block content   
        +admin-list
        h3= title
        div(class='container-fluid')
         form(name='projects' method='POST')
            div(class='form-group row')
                    label(class="col-sm-3 col-form-label") Проекты:
                    div(class='col-sm-6')
                        select(name='database_list' class="form-control")
                            each project in projects
                                option(value="")= project.pr_name
                            else
                                option(value="") null
            div(class='form-group row')
                    label(class="col-sm-3 col-form-label") Предмет:
                    div(class='col-sm-6')
                        select(name='subject_list' class="form-control")
                            each project in projects
                                option(value="")= project.pr_name
                            else
                                option(value="") null
            table(class='table table-bordered')
                tbody
                tr
                td Test1
            button(type="submit" class='btn btn-primary') Проверить
        script.
            
        